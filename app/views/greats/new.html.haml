.single-container
  %header.single-header
    %h1
      = link_to greats_path do
        = image_tag 'https://www.greatman-words.com/common-images/logo@2x.png', alt: '名言', height: '70', width: '500'
  .single-main 
  = form_for @greats,url: greats_path, method: :post do |f| 
    %section.forms
      .form
        .form__name
          = f.text_field :name, placeholder: "name", type: "string", class: "form__name--input" 
        .form__image
          = f.file_field :image,placeholder: "image_url",  class: "form__image--input" 
        .form__tag
          = f.select :tag, [["---",""],["人生"],["夢"],["恋愛"],["仕事"],["スポーツ"],["歴史"],["アニメ"]], {}, class: "form__tag--input"
        .form__content1
          = f.text_area :content, placeholder:"名言", type: "text", class: "form__content1--input"
        .form__content2
          = f.text_area :content2, placeholder:"名言", type: "text", class: "form__content2--input"
        .form__content3
          = f.text_area :content3, placeholder:"名言", type: "text", class: "form__content3--input"
        .form__explanation
          = f.text_area :explanation, placeholder:"説明文", type: "text", class: "form__explanation--input"
        %div
          = f.submit class: "btn-default", value: "投稿"
          = link_to 'もどる', greats_path, class: 'btn-defau-gray'
