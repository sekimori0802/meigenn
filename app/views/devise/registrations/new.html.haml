.contents.row
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .field
      %em アバター画像
      %br/
      = f.file_field  :avater
    .field
      %em  ニックネーム 
      %br/
      = f.text_field :nickname, {:style =>"\n    height: 30px;\n  width: 300px;\n"}
    .main__user--info
    .field
      %em 好きなジャンル
      %br/
      = f.select :tag, [["---",""],["人生"],["夢"],["恋愛"],["仕事"],["スポーツ"],["歴史"],["アニメ"]], {},{:style =>"\n    height: 30px;\n  width: 300px;\n"}
    .field
      %em  好きな偉人
      %br/
      = f.text_field :man, {:style =>"\n    height: 30px;\n  width: 300px;\n"}
    .field
      = f.label :email
      %br/
      = f.email_field :email, {:style =>"\n    height: 30px;\n  width: 300px;\n"}
    .field
      = f.label :password
      - if @validatable
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "off"
    .field
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "off"
    .actions
      = f.submit "新規登録",{:style =>"\n    height: 30px;\n  width: 300px;\n"}
