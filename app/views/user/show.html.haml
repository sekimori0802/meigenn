.main
  .main__header
    .main__header--logo
      %h1.head
        = link_to new_great_path do
          = image_tag 'https://www.greatman-words.com/common-images/logo@2x.png', alt: '名言', height: '70', width: '500'
      
    .main__header--log3
      = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'link'
    .main__header--log4
      = link_to 'マイページ', user_path(current_user.id), class: 'link'
  .main__user
    - unless current_user.avater.blank?
      .main__user--image{:style => "\n    float: left;\n    margin-left: 300px;\n"}
        = image_tag "#{current_user.avater}",  height: '300', width: '300'
    - else
      .main__user--image{:style => "\n    float: left;\n    margin-left: 300px;\n"}
        = image_tag "//static.mercdn.net/images/member_photo_noimage_thumb.png", height: '300', width: '300'
    .main__user--info{:style => "\n    float: left;\n    margin-left: 50px;\n"}
      %table{:border => 1,:style=>"\n    height: 300px;\n  width: 300px;\n"} 
        %tr{:style => "\n    text-align: center;\n"}
          %th{:style => "\n    background: #29ceea;\n"} ニックネーム
          %td{:style => "\n    background: cornsilk;\n"} 
            = current_user.nickname
        %tr{:style => "\n    text-align: center;\n"}
          %th{:style => "\n    background: #29ceea;\n"}  好きなジャンル
          %td{:style => "\n    background: cornsilk;\n"} 
            = current_user.tag
        %tr{:style => "\n    text-align: center;\n"}
          %th{:style => "\n    background: #29ceea;\n"}  投稿数
          %td{:style => "\n    background: cornsilk;\n"} 
            = @counts
        %tr{:style => "\n    text-align: center;\n"}
          %th{:style => "\n    background: #29ceea;\n"}  好きな偉人
          %td{:style => "\n    background: cornsilk;\n"} 
            = current_user.man
  .main__contents{:style => "\n    clear: left;\n    margin-left: 261px;\n    margin-top: 400px;\n"}
    .main__contents--box{:style => "\n    font-size: 30px;\n    font-weight: 600;\n"}
      投稿一覧
      %ul.contens
        - @greats.each do |greats|
          %li.contens-box{:style => "\n    width: 70%;\n    border: solid;\n    border-color: #aac7de;\n    background: cornsilk;\n    margin-top: 10px;\n    border-radius: 20px;\n"}
            %figure
              = link_to great_path(greats.id) do
                = image_tag "#{greats.image}", class: :retina, style: "\n    max-width: 100px;\n    max-height: 100px;\n" 
              .entryListTitle{:style => "width: 700px;"}
                %font{:style => "font-size: 20px;vertical-align: top;"}
                  = '・' + greats.content
              
              -# .entryListTitle{:style => "\n    float: left;\n"}
              -# %font{:style => "vertical-align: top;"}
              -#   = '・' + greats.content2